<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feature.account.AccountActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_16dp">

            <RelativeLayout
                android:id="@+id/you"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="@drawable/image_account">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/you_account" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dimen_16dp"
                android:layout_toEndOf="@id/you"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bạn"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_26sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_update_infor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:text="cập nhật thông tin"
                    android:textColor="#EB0E0E" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/background_location">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:src="@drawable/location" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="địa chỉ"
                        android:textColor="#EB0E0E" />
                </LinearLayout>
            </RelativeLayout>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_8"
            android:background="@color/line_large" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_16dp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/infor"
                    android:src="@drawable/infor"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thông tin chung"
                    android:layout_toEndOf="@id/infor"
                    android:layout_marginStart="@dimen/dp_8"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_20sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/introduce"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_alignParentStart="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Về ToCoToCo "
                    android:textSize="@dimen/dimen_14sp"
                    android:textStyle="bold"
                    android:textColor="#787878" />
                <ImageView
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/arrow_left_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_8"
            android:background="@color/line_large" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_16dp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/support"
                    android:src="@drawable/support"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trung tâm hỗ trợ"
                    android:layout_toEndOf="@id/support"
                    android:layout_marginStart="@dimen/dp_8"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_20sp"
                    android:textStyle="bold" />
            </RelativeLayout>
            <RelativeLayout
                android:gravity="center"
                android:layout_marginTop="@dimen/dp10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_alignParentStart="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Câu hỏi thường gặp"
                    android:textSize="@dimen/dimen_14sp"
                    android:textStyle="bold"
                    android:textColor="#787878" />
                <ImageView
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/arrow_left_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <RelativeLayout
                android:gravity="center"
                android:layout_marginTop="@dimen/dp10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_alignParentStart="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dimen_14sp"
                    android:text="Phản hồi và hỗ trợ"
                    android:textStyle="bold"
                    android:textColor="#787878" />
                <ImageView
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/arrow_left_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_8"
            android:background="@color/line_large" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_16dp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/other"
                    android:src="@drawable/other"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Khác"
                    android:layout_toEndOf="@id/other"
                    android:layout_marginStart="@dimen/dp_8"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_20sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:gravity="center"
                android:layout_marginTop="@dimen/dp10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_alignParentStart="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dimen_14sp"
                    android:text="Điều khoản và ứng dụng"
                    android:textStyle="bold"
                    android:textColor="#787878" />
                <ImageView
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/arrow_left_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <RelativeLayout
                android:gravity="center"
                android:layout_marginTop="@dimen/dp10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_alignParentStart="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dimen_14sp"
                    android:text="Về Ứng dụng"
                    android:textStyle="bold"
                    android:textColor="#787878" />
                <ImageView
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/arrow_left_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/logout"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:background="@color/line_large"
            android:layout_marginEnd="@dimen/dp_8"
            android:layout_width="match_parent"
            android:paddingVertical="@dimen/dimen_16dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginStart="@dimen/dimen_32dp"
                android:text="Đăng xuất tài khoản"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/exit"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:background="@color/line_large"
            android:layout_marginEnd="@dimen/dp_8"
            android:layout_width="match_parent"
            android:paddingVertical="@dimen/dimen_16dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginStart="@dimen/dimen_32dp"
                android:text="Thoát ứng dụng"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_alignParentBottom="true"
        android:layout_width="@dimen/dimen_200dp"
        android:layout_height="@dimen/dimen_5dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/custom_line" />

</RelativeLayout>